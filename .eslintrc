{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "jsx-a11y",
    "import"
  ],
  "parserOptions": { 
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env":{ 
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": [2, "always"],
    "linebreak-style": 0,
    "comma-dangle": ["error", "never"],
    "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}]
  }
}